#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$ROOT_DIR/ui"

if ! command -v npm >/dev/null 2>&1; then
  echo "npm is required to build the UI. Install Node.js + npm first." >&2
  exit 1
fi

if [ ! -d node_modules ]; then
  npm install
fi

npm run build

echo "Built UI: $ROOT_DIR/ui/dist/"
